/* pages/login/login.wxss */
.login-container{
  padding: 20rpx;
}
.wrapper{
  width: 100%;
}
.welcome{
  font-size: 40rpx;
  color: #333;
}
.input-content{
  display: flex;
  flex-direction: column;
  align-content: space-around;
  padding-top: 100rpx;
  margin-bottom: 40rpx;
}
.input-item{
  padding: 0 40rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}
.input-item input{
  padding-top: 20rpx;
}
.confirm-btn{
  width: 630rpx;
  height: 76rpx;
  line-height: 76rpx;
  border-radius: 50rpx;
  margin-top: 70rpx;
  background: #d43c33;
  color: #fff;
  font-size: 32rpx;
}
.forget-section{
  text-align: center;
  font-size: 32rpx;
  margin-top: 20rpx;
  color: #4399fc;
}
.register-section{
  position: fixed;
  bottom: 30rpx;
  left: 50%;
  text-align: center;
  transform: translateX(-50%);
  color: #999;
}
.register-section text{
  color: #4399fc;
}